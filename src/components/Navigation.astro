---
const navLinks = [
  { text: "Home", href: "/", isTarget: false },
  { text: "About", href: "/about/", isTarget: true },
  { text: "Blog", href: "/blog/", isTarget: false },
  { text: "Tags", href: "/tags/", isTarget: false },
];
---

<ul
  class="hidden absolute top-1/2 left-1/2 transform -translate-y-1/2 -translate-x-1/2 lg:flex lg:mx-auto lg:flex lg:items-center lg:w-auto lg:space-x-6"
>
  {
    navLinks.map(({ text, href, isTarget }, index) => (
      <>
        <li>
          <a
            class="text-base md:text-lg text-slate-700 hover:text-slate-900 dark:text-violet-100 dark:hover:text-violet-600"
            href={href}
          >
            {text}
          </a>
        </li>
        {index !== navLinks.length - 1 && (
          <li>
            <svg
              xmlns="http://www.w3.org/2000/svg"
              fill="none"
              stroke="currentColor"
              class="w-4 h-4 current-fill"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M12 5v0m0 7v0m0 7v0m0-13a1 1 0 110-2 1 1 0 010 2zm0 7a1 1 0 110-2 1 1 0 010 2zm0 7a1 1 0 110-2 1 1 0 010 2z"
              />
            </svg>
          </li>
        )}
      </>
    ))
  }
</ul>
